<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".SkunkWorkDetailActivity">

    <EditText
        android:id="@+id/sw_title_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/title"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/sw_save_btn"
            style="@android:style/Widget.Material.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            app:layout_constraintStart_toStartOf="@+id/sw_title_edit_text"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/sw_note_edit_text"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/sw_note_edit_text" app:layout_constraintEnd_toEndOf="@+id/sw_title_edit_text"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/sw_title_edit_text"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/sw_title_edit_text"
            android:hint="Note"/>
</androidx.constraintlayout.widget.ConstraintLayout>