<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:orientation="vertical" android:id="@+id/linearLayout2">

    <TextView
            android:id="@+id/skunk_work_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textSize="24sp" tools:layout_conversion_absoluteHeight="57dp" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" tools:layout_conversion_absoluteWidth="24dp"/>

    <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray" tools:layout_conversion_absoluteHeight="1dp"
            tools:layout_editor_absoluteY="57dp" tools:layout_editor_absoluteX="0dp"
            tools:layout_conversion_absoluteWidth="411dp" android:id="@+id/view3"/>
    <ImageButton
            android:layout_width="25dp"
            app:srcCompat="@android:drawable/ic_menu_delete"
            android:id="@+id/remove_skunkwork" android:layout_height="46dp"
            tools:layout_conversion_absoluteHeight="51dp"
            tools:layout_conversion_absoluteWidth="35dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/view3"
            android:background="@null"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/skunk_work_title"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0"
            android:onClick="onClick"/>
</android.support.constraint.ConstraintLayout>